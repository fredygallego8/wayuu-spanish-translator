#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/fredy/Escritorio/wayuu-spanish-translator/backend/node_modules/.pnpm/window-size@0.1.4/node_modules/window-size/node_modules:/home/fredy/Escritorio/wayuu-spanish-translator/backend/node_modules/.pnpm/window-size@0.1.4/node_modules:/home/fredy/Escritorio/wayuu-spanish-translator/backend/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/fredy/Escritorio/wayuu-spanish-translator/backend/node_modules/.pnpm/window-size@0.1.4/node_modules/window-size/node_modules:/home/fredy/Escritorio/wayuu-spanish-translator/backend/node_modules/.pnpm/window-size@0.1.4/node_modules:/home/fredy/Escritorio/wayuu-spanish-translator/backend/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../window-size/cli.js" "$@"
else
  exec node  "$basedir/../window-size/cli.js" "$@"
fi

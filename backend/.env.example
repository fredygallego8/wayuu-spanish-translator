# 🎤 ASR Configuration - Wayuu-Spanish Translator
# Configuración GRATUITA usando Whisper local

# Proveedor ASR (cambiar de 'stub' a 'whisper' para usar Whisper local)
ASR_PROVIDER=whisper

# Modelo Whisper (small = balance perfecto calidad/velocidad/memoria)
WHISPER_MODEL=small

# Idioma para transcripción (español como base, wayuu se detectará)
ASR_LANGUAGE=es

# Habilitar fallback a OpenAI API si falla Whisper local (opcional)
ASR_ENABLE_FALLBACK=false

# Configuración de Whisper local
ASR_TEMPERATURE=0
ASR_RESPONSE_FORMAT=text
ASR_ENABLE_PHONETIC_CORRECTION=true
ASR_ENABLE_WAYUU_DICTIONARY=true
ASR_CONFIDENCE_THRESHOLD=0.7

# OpenAI API Key (opcional, solo para fallback si ASR_ENABLE_FALLBACK=true)
# OPENAI_API_KEY=sk-your-api-key-here

# Configuración del servidor
PORT=3002
NODE_ENV=development

